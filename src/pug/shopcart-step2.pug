extends ./layout/index.pug

block content
  section#shopcart-step-2.container.py-5
    .my-3
      h2.pb-5 購物袋
      .row.align-items-md-end.align-items-center.justify-content-center
        .col-auto.step.py-2.text-primary
          .size-41.icon-step-1.pb-1
          span 購物袋
        .col.horizontal-line-2.d-none.d-md-block.mb-3
        .col-auto.step.py-2.text-gray
          .size-41.icon-step-2.pb-1
          span 資料填寫
        .col.horizontal-line-2.d-none.d-md-block.mb-3
        .col-auto.step.py-2.text-gray
          .size-41.icon-step-3.pb-1
          span 結帳
        .col.horizontal-line-2.d-none.d-md-block.mb-3
        .col-auto.step.py-2.text-gray
          .size-41.icon-step-4.pb-1
          span 綁定毛孩
        .col.horizontal-line-2.d-none.d-md-block.mb-3
        .col-auto.step.py-2.text-gray
          .size-41.icon-step-5.pb-1
          span 完成訂單
    .border.my-3
      h4.d-flex.justify-content-center.mb-0.p-3
        .mr-2 總計
        .mr-1 NT$
        span 5915
    .border.my-3
      .text-center.h6.p-2.p-md-3 收件資料
      .border-top.container-fluid.py-2
        .row.align-items-center.py-2.mx-n1.mx-lg-n2
          .col-auto.px-1.px-lg-2 收件姓名
          .col.px-1.px-lg-2
            input.form-control.rounded-pill.bg-light.border-0(type="text" placeholder="請輸入姓名")
          .col-auto.px-1.px-lg-2
            select.custom-select
              option(value="M") 先生 
              option(value="F") 小姐
        .row.mx-n1.mx-lg-n2
          .col-lg-6.px-1.px-lg-2
            .row.align-items-center.py-2.mx-n1.mx-lg-n2
              .col-auto.px-1.px-lg-2 收件電話
              .col.px-1.px-lg-2
                input.form-control.rounded-pill.bg-light.border-0(type="text" placeholder="請輸入電話")
          .col-lg-6.px-1.px-lg-2
            .row.align-items-center.py-2.mx-n1.mx-lg-n2
              .col-auto.px-1.px-lg-2 電子信箱
              .col.px-1.px-lg-2
                input.form-control.rounded-pill.bg-light.border-0(type="text" placeholder="請輸入信箱")
        .d-grid.grid-address-list
          .grid-title.pt-3 收件地址
          .grid-code.py-2.pl-2
            input.form-control.rounded-pill.bg-light.border-0(type="text" placeholder="請輸入郵遞區號")
          .d-block.d-md-none
          .grid-city.py-2.pl-2
            select.custom-select
              option(value="臺北市") 臺北市
          .d-block.d-md-none
          .grid-area.py-2.pl-2
            select.custom-select
              option(value="中正區") 中正區
          .d-none.d-md-block.d-xl-none
          .grid-address.py-2.pl-2.pl-md-0.pl-xl-2
            input.form-control.rounded-pill.bg-light.border-0(type="text" placeholder="請輸入地址")
      .text-right.pb-3.px-3
        button.rounded-pill.btn.btn-light.text-dark 填入最近使用收件地址
    .border.my-3
      .text-center.h6.p-2.p-md-3 索取發票
      .border-top.container-fluid
        .row.align-items-center.justify-content-center
          .col-auto.my-3
            .custom-control.custom-radio
              input.custom-control-input(type="radio" id="19b9f5c6a" name="19b9f5c6")
              label.custom-control-label(for="19b9f5c6a") 二聯式電子發票
          .col-auto.my-3
            .custom-control.custom-radio
              input.custom-control-input(type="radio" id="19b9f5c6b" name="19b9f5c6")
              label.custom-control-label(for="19b9f5c6b") 三聯式電子發票
          .col-auto.my-3
            .custom-control.custom-radio
              input.custom-control-input(type="radio" id="19b9f5c6c" name="19b9f5c6")
              label.custom-control-label(for="19b9f5c6c") 手機條碼載具
          .col-auto.my-3
            .custom-control.custom-radio
              input.custom-control-input(type="radio" id="19b9f5c6d" name="19b9f5c6")
              label.custom-control-label(for="19b9f5c6d") 自然人憑證條碼
          .col-12
            .container-fluid.mx-auto.my-3.bg-light.rounded-lg.py-3(style="max-width: 768px;")
              .row.align-items-center
                .col-12.py-2 為公司行號報稅使用，一般消費者請選擇開立個人發票
                .col-sm-4.py-2 請輸入公司名稱
                .col-sm-8.py-2
                  input.form-control.rounded-pill.border-0.bg-white(type="text")
                .col-sm-4.py-2 請輸入統一編號
                .col-sm-8.py-2
                  input.form-control.rounded-pill.border-0.bg-white(type="text")
            .container-fluid.mx-auto.my-3.bg-light.rounded-lg.py-3(style="max-width: 768px;")
              .row.align-items-center
                .col-12.py-2
                  span 使用手機條碼載具（手機條碼請至
                  a(target="_blank" title="財政部電子發票整合服務平台(另開視窗)" href="https://www.einvoice.nat.gov.tw/") 財政部電子發票整合服務平台
                  span 申請）
                .col-sm-4.py-2 請輸入您的手機條碼
                .col-sm-8.py-2
                  input.form-control.rounded-pill.border-0.bg-white(type="text")
                .col-sm-4.py-2 手機條碼確認
                .col-sm-8.py-2
                  input.form-control.rounded-pill.border-0.bg-white(type="text")
                small.col-12.py-2 *** 含斜線及英數碼，共8碼，例如：/RZREDHQ手機條碼確認。（請再次確認手機條碼是否正確）
            .container-fluid.mx-auto.my-3.bg-light.rounded-lg.py-3(style="max-width: 768px;")
              .row.align-items-center
                .col-12.py-2
                  span 使用自然人憑證條碼載具（自然人憑證條碼請至
                  a(target="_blank" title="財政部電子發票整合服務平台(另開視窗)" href="https://www.einvoice.nat.gov.tw/") 財政部電子發票整合服務平台
                  span 申請）
                .col-sm-4.py-2 請輸入您的自然人憑證條碼
                .col-sm-8.py-2
                  input.form-control.rounded-pill.border-0.bg-white(type="text")
                .col-sm-4.py-2 自然人憑證條碼確認
                .col-sm-8.py-2
                  input.form-control.rounded-pill.border-0.bg-white(type="text")
                small.col-12.py-2 *** 含英數碼，共16碼，例如：GP00000012345678自然人憑證條碼確認（請再次確認自然人憑證條碼是否正確）
      .border-top.container-fluid
        .row.align-items-center.justify-content-center
          .col-auto.my-3
            .custom-control.custom-radio
              input.custom-control-input(type="radio" id="16149702a" name="16149702")
              label.custom-control-label(for="16149702a") 不捐贈發票
          .col-auto.my-3
            .custom-control.custom-radio
              input.custom-control-input(type="radio" id="16149702b" name="16149702")
              label.custom-control-label(for="16149702b") 捐贈發票
          .col-12
            .container-fluid.mx-auto.my-3.bg-light.rounded-lg.py-3(style="max-width: 768px;")
              .row.align-items-center
                .col-sm-4.py-2 請輸入自訂捐款單位之捐贈碼
                .col-sm-8.py-2
                  input.form-control.rounded-pill.border-0.bg-white(type="text")
                .col-sm-4.py-2 請輸入統一編號
                .col-12.text-center
                  a(target="_blank" title="財政部電子發票整合服務平台(另開視窗)" href="https://www.einvoice.nat.gov.tw/APCONSUMER/BTC603W/") 查詢更多捐贈機關或團體的捐贈碼
      .border-top.py-4
        .text-danger.text-center.mb-3.px-3 陪心寵糧依財政部規定，發票已託管，無需開立紙本發票。
        .d-flex.justify-content-center.align-items-center
          .d-flex.px-3
            .size-41.icon-check-round.text-primary
            .pl-3(style="max-width: 420px;") 申請人需理解線上電子交易的退貨流程需人工辦理折讓單退貨，並同意授權陪心寵糧代為處理折讓單事宜，即無需提供折讓單。
    .py-3
      .row.no-gutters
        .col-md-3.col-xl-2.d-none.d-md-block.bg-primary
          svg.w-100(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 250 250')
            g.precautions
              text(x='125' y='115' text-anchor='middle') 注意
              text(x='125' y='185' text-anchor='middle') 事項
        .col-12.col-md-9.col-xl-10.bg-light.py-3.px-4.d-flex.flex-center
          .text-dark
            h2.text-center.font-weight-bold.d-md-none.mb-4 注意事項
            h4.text-primary 按下"下一步"之前請注意!
            .py-lg-2
            div 請確認所購買之商品品項，若按下一步產生訂單編號後，即不能修改訂單。若您在產生訂單編號後欲修改商品品項則需重新下單。
    .d-flex.justify-content-center
      a.btn.btn-primary.text-white.rounded-pill.mx-3 上一步
      a.btn.btn-primary.text-white.rounded-pill.mx-3 下一步
