extends ./layout/index.pug
//- base gold platinum diamond
block content
    main#member-page.col
        section.container.py-4
            .bg-gray-light.p-3
                .position-relative.mx-auto(style='max-width:600px;')
                    img.w-100(src="./assets/image/member-card.png")
                    .position-absolute.position-block
                        .d-flex.pb-2
                            .bg-white.rounded-circle.d-flex.flex-center(style='width:50px;height:50px;') 
                                span.text-primary 初始
                            .pl-3.text-white
                                h5.mb-0 張小明
                                h6.mb-0 Card Member
                        button.d-flex.btn.btn-primary.p-0.rounded-pill.overflow-hidden(type='button')
                            span.d-flex.bg-white.text-dark.px-2.py-1
                                span ABCDEFG
                                span.icon-copy.ml-1(style='width: 16px')
